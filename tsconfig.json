{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "ignoreDeprecations": "5.0",
    "skipLibCheck": true,
    "esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}